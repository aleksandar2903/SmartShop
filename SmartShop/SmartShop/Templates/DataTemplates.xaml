<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                    xmlns:controls="clr-namespace:SmartShop.Controls"
                    x:Class="SmartShop.Templates.DataTemplates">

    <DataTemplate x:Key="product_details_loading">
        <StackLayout Padding="15" Spacing="10">
            <controls:SkeletonView HorizontalOptions="FillAndExpand" CornerRadius="15" Grid.ColumnSpan="5" HeightRequest="300" BackgroundColor="#CCCCCC" />
            <controls:SkeletonView HorizontalOptions="Start" Margin="0,5,0,0" CornerRadius="15" HeightRequest="10" WidthRequest="50" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView HorizontalOptions="Start" CornerRadius="15" HeightRequest="20" WidthRequest="200" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView HorizontalOptions="FillAndExpand" CornerRadius="15" HeightRequest="30" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView HorizontalOptions="Start" Margin="0,0,0,5" CornerRadius="15" HeightRequest="15" WidthRequest="150" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView Margin="15,0" HorizontalOptions="Start" CornerRadius="15" HeightRequest="10" WidthRequest="200" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView Margin="15,0" HorizontalOptions="Start" CornerRadius="15" HeightRequest="10" WidthRequest="250" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView Margin="15,0" HorizontalOptions="Start" CornerRadius="15" HeightRequest="10" WidthRequest="120" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView Margin="15,0" HorizontalOptions="Start" CornerRadius="15" HeightRequest="10" WidthRequest="300" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView Margin="15,0" HorizontalOptions="Start" CornerRadius="15" HeightRequest="10" WidthRequest="150" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView HorizontalOptions="Fill" CornerRadius="15" HeightRequest="150" Margin="10" BackgroundColor="#CCCCCC"  />
            <controls:SkeletonView HorizontalOptions="Start" CornerRadius="15" HeightRequest="15" WidthRequest="200" BackgroundColor="#CCCCCC"  />
        </StackLayout>
    </DataTemplate>
</ResourceDictionary>